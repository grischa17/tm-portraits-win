
@model LetPaintPictures.ViewModels.Request.Index
@{
    ViewBag.Title = "Offene Anfragen";
}

<h2>Offene Anfragen</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>Vormane</td>
            <td>Nachname</td>
            <td>Eingangsdatum</td>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Header.Count; i++)
        {
            <tr>
                <td>@Html.ActionLink(@Model.Header[i].Id.ToString(), "Detail", new { Id = @Model.Header[i].Id }) </td>
                <td>@Model.Header[i].FirstName</td>
                <td>@Model.Header[i].LastName</td>
                <td>@($"{Model.Header[i].CreatedOn:d}")</td>
            </tr>
        }
    </tbody>
</table>

