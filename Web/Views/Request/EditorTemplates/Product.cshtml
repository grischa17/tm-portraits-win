@model int

@{
    IQueryable<TuRM.Portrait.ViewModels.Product.Product> products = ViewData["Products"] as IQueryable<TuRM.Portrait.ViewModels.Product.Product>;
    string name = ViewData["Name"] as string;
}

@if (products.Count() <= 1)
{
    <text>@(products.FirstOrDefault()?.Name)</text>
}
else
{
    foreach (var item in products)
    {
        <div>
            <input type="radio" name="@name" id="@item.Id" value="@item.Id" @if (Model == item.Id) {  <text> checked="checked" </text>   } />
            <label for="@item.Id"> @item.Name </label>
        </div>
    }
}
