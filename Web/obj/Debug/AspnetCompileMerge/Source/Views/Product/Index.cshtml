@model IEnumerable<TuRM.Portrait.ViewModels.Product.Product>
@{
    ViewBag.Title = "Produkte";
}

<h2>Produkte</h2>

<div class="row">
    <div class="col-xs-12">
        <a href="@Url.Action("Create", "Product" )" class="btn btn-default">
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true" ´></span>
            &nbsp;Neues Produkt anlegen
        </a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d=>d.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(d=>d.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(d=>d.FirstOrDefault().Price)</th>
            <th>@Html.DisplayNameFor(d =>d.FirstOrDefault().DisplayWidth)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.DisplayFor(d => item, "ProductListItem");
        }
    </tbody>
</table>